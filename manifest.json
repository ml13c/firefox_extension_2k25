{
  "manifest_version": 2,
  "name": "Job Application Tracker",
  "version": "1.0",
  "description": "Track your job applications and export to CSV",
  
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "downloads"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Job Application Tracker"
  }
}